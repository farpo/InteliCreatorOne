<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.ansquare.intellicreator.one.ui.ICGuiController">
   <children>
      <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #27252d;">
         <children>
            <TabPane prefHeight="288.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Item">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="277.0" prefWidth="600.0">
                           <children>
                              <Pane prefHeight="256.0" prefWidth="600.0" style="-fx-border-color: #5d586d; -fx-border-width: 5;">
                                 <children>
                                    <Button fx:id="createItemButton" layoutX="261.0" layoutY="208.0" mnemonicParsing="false" text="Create item" />
                                    <TextField fx:id="itemNameField" layoutX="133.0" layoutY="14.0" promptText="Name" />
                                    <TextField fx:id="itemGroupField" layoutX="133.0" layoutY="62.0" promptText="Item group" />
                                    <Button fx:id="itemtextureSelect" layoutX="22.0" layoutY="14.0" mnemonicParsing="false" text="Choose texture" />
                                    <Button fx:id="itemModelSelect" layoutX="24.0" layoutY="62.0" mnemonicParsing="false" text="Choose model" />
                                 </children>
                              </Pane>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Block">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <Pane prefHeight="256.0" prefWidth="600.0" style="-fx-border-color: #5d586d; -fx-border-width: 5;">
                                 <children>
                                    <Button fx:id="createBlockButton" layoutX="261.0" layoutY="208.0" mnemonicParsing="false" text="Create item" />
                                    <TextField fx:id="blockNameField" layoutX="133.0" layoutY="14.0" promptText="Name" />
                                    <TextField fx:id="blockItemGroupField" layoutX="133.0" layoutY="62.0" promptText="Item group" />
                                    <Button fx:id="blockTextureSelect" layoutX="22.0" layoutY="14.0" mnemonicParsing="false" text="Choose texture" />
                                    <Button fx:id="blockModelSelect" layoutX="24.0" layoutY="62.0" mnemonicParsing="false" text="Choose model" />
                                 </children>
                              </Pane>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab text="Entity">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
                  <Tab text="Food">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
                  <Tab text="Armor">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
            <Label fx:id="actionResultLabel" alignment="CENTER" layoutX="5.0" layoutY="288.0" prefHeight="27.0" prefWidth="590.0" text="Action result" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
</AnchorPane>
